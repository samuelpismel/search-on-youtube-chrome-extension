{
  "manifest_version": 2,

  "name": "Search on Youtube",
  "description": "Search the selected text directly on Youtube. With the button or context menu.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/32x32.png"
  },

  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "96": "icons/96x96.png",
    "144": "icons/144x144.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
